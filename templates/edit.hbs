<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Artwork</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-image: url('welcome.jpg'); /* Replace 'background.jpg' with the path to your background image */
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 600px;
      margin: 50px auto;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 5px;
      background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent white background */
    }

    h1 {
      text-align: center;
      font-size: 24px;
    }

    label {
      font-size: 16px;
    }

    input[type="file"], input[type="number"], textarea, input[type="submit"] {
      display: block;
      width: calc(100% - 20px);
      padding: 10px;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    input[type="submit"] {
      background-color: #240910;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    input[type="submit"]:hover {
      background-color: #1d0606;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Edit Artwork</h1>

    <form id="edit-form" enctype="multipart/form-data">
      <label for="image">Change Picture:</label>
      <input type="file" id="image" name="image" accept="image/*">

      <label for="description">Description:</label>
      <textarea id="description" name="description" rows="4" cols="50"></textarea>

      <label for="price">Price:</label>
      <input type="number" id="price" name="price" min="0" step="0.01">

      <input type="submit" value="Save Changes">
    </form>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Retrieve artwork details from local storage or a server
      // For this example, let's assume the artwork details are stored in local storage

      // Get the artwork details
      const artwork = JSON.parse(localStorage.getItem('selectedArtwork'));

      // Fill the form fields with the current artwork details
      document.getElementById('description').value = artwork.description;
      document.getElementById('price').value = artwork.price;

      // Add event listener for form submission
      document.getElementById('edit-form').addEventListener('submit', function(event) {
        event.preventDefault(); // Prevent default form submission

        // Get updated values from the form
        const updatedDescription = document.getElementById('description').value;
        const updatedPrice = document.getElementById('price').value;

        // Update the artwork details
        artwork.description = updatedDescription;
        artwork.price = updatedPrice;

        // Save the updated artwork details back to local storage or a server
        // For this example, let's save it back to local storage
        localStorage.setItem('selectedArtwork', JSON.stringify(artwork));

        // Redirect back to the exhibition_form.html page
        window.location.href = 'exhibition_form.html';
      });
    });
  </script>
</body>
</html>
